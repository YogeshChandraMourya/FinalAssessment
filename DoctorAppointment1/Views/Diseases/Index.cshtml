@model IEnumerable<DoctorAppointment1.Models.Disease>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiseaseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiseaseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuitableDoctorNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DiseaseId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiseaseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SuitableDoctorNavigation.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DiseaseName">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DiseaseName">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DiseaseName">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
